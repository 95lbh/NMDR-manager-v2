rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 배드민턴 관리 시스템 보안 규칙
    
    // 설정 컬렉션 - 읽기/쓰기 허용
    match /settings/{document} {
      allow read, write: if true;
    }
    
    // 멤버 컬렉션 - 읽기/쓰기 허용
    match /members/{document} {
      allow read, write: if true;
    }
    
    // 출석 컬렉션 - 읽기/쓰기 허용
    match /attendance/{document} {
      allow read, write: if true;
    }
    
    // 게임 상태 컬렉션 - 읽기/쓰기 허용
    match /gameState/{document} {
      allow read, write: if true;
    }
    
    // 테스트 컬렉션 - 읽기 허용 (연결 테스트용)
    match /test/{document} {
      allow read: if true;
    }
    
    // 기타 모든 문서 - 기본적으로 읽기/쓰기 허용 (개발용)
    // 프로덕션에서는 더 엄격한 규칙 적용 권장
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
